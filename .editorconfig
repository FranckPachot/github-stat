root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{md, markdown,txt}]
trim_trailing_whitespace = false

[*.{sh, yml, yaml, json}]
indent_size = 2
insert_final_newline = true

[*.{bat, ps1}]
indent_style = tab
end_of_line = crlf

[*.{js, ts}]
indent_size = 4

[*.{html, css, scss, less}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 8

[*.sql]
indent_size = tab
end_of_line = crlf
insert_final_newline = true

[*.patch.*]
trim_trailing_whitespace = false
